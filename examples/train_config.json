{
    "version": "1.0.0",
    "debug": false,
    "preserve_aspect_ratio": true,

    "vocab_fp": "label_cn.txt",
    "data_root_dir": "data",

    "fpn_type": "pan",
    "auto_rotate_whole_image": false,
    "rotated_bbox": true,
    "resized_shape": [3, 512, 512],

    "gpus": 0,
    "epochs": 2,
    "batch_size": 4,
    "num_workers": 0,
    "pin_memory": false,
    "optimizer": "adam",
    "learning_rate": 3e-3,
    "weight_decay": 0,
    "lr_scheduler": {
        "name": "multi_step",
        "milestones": [5, 10, 16, 22, 30],
        "gamma": 0.5
    },
    "precision": 32,
    "limit_train_batches": 1.0,
    "limit_val_batches": 1.0,
    "pl_checkpoint_monitor": "iou_epoch",
    "pl_checkpoint_mode": "max"
}
